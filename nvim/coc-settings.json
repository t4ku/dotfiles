{ 
   "diagnostic.virtualText": true,
   "diagnostic.virtualTextCurrentLineOnly": false,
   "diagnostic.checkCurrentLine": false,
   "diagnostic.messageTarget":"echo",
   "coc.preferences.previewAutoClose": true,
   "tsserver.enableJavascript": true,
   "eslint.filetypes": ["javascript"],
   "eslint.autoFixOnSave": true,
   "eslint.alwaysShowStatus": true,
   "eslint.probe": [
     "javascript",
     "javascriptreact",
     "typescript",
     "typescriptreact"
   ],
   "solargraph.commandPath": "/Users/t_okawa/.anyenv/envs/rbenv/versions/2.7.5/bin/solargraph",
   "solargraph.formatting": true,
   "solargraph.autoformat": true,
   "solargraph.diagnostics": true,
   "languageserver": {
     "golangci-lint-languageserver": {
       "command": "golangci-lint-langserver",
       "filetypes": ["go"],
       "initializationOptions": {
         "command": ["golangci-lint", "run", "--enable-all", "--disable", "lll", "--out-format", "json", "--issues-exit-code=1"]
       }
     },
     "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
     },
     "proto" :{
       "command": "pls",
       "filetypes": ["proto", "cpp"]
     },
     "terraform-ls": {
       "command": "terraform-ls",
       "args": ["serve"],
       "filetypes": ["terraform","tf","hcl"],
       "trace.server": "verbose",
       "initializationOptions": { }
     }
   },
   "javascript.suggest.autoImports": true,
   "typescript.suggest.autoImports": true,
   "astro.enable": true,
   "graphql": {
       "command": "graphql-lsp",
       "args": ["server", "-m", "stream"],
       // customize filetypes to your needs
       "filetypes": ["typescript", "typescriptreact", "graphql"]
   },
   // https://github.com/yaegassy/coc-black-formatter?tab=readme-ov-file#when-used-with-other-coc-extensions-for-python-that-provide-formatting-feature
   "python": {
     "formatting": {
       // use ruff for formatting
       // https://github.com/yaegassy/coc-ruff
       "provider": "none",
       // "ruffPath": "${workspaceFolder}/.venv/bin/ruff",
       "ruffArgs": ["--line-length=88", "--target-version=py311"]
     },
     "linting": {
       "ruffEnabled": true,
       // "ruffPath": "${workspaceFolder}/.venv/bin/ruff",
       "mypyEnabled": true,
       // "mypyPath": "${workspaceFolder}/.venv/bin/mypy"
     },
     "pythonPath": "/Users/taku.okawa/.anyenv/envs/pyenv/versions/3.13-dev/"
   },
   "ruff.autoFixOnSave": true,
   "pyright": {
     "enable": true,
     "inlayHints.enable": true,
     "inlayHints.variableTypes": true,
     "inlayHints.functionReturnTypes": true,
     "analysis.typeCheckingMode": "basic",
     "analysis.diagnosticMode": "workspace",
     "analysis.useLibraryCodeForTypes": true
   },
   "diagnostic-language-server.filetypes": {
     "python": ["ruff", "mypy", "pyright"]
   },
   "diagnostic-language-server.linters": {
      // "ruff": {
      //   "command": "ruff",
      //   "sourceName": "ruff",
      //   "args": ["check", "--format", "json", "-"],
      //   "rootPatterns": ["pyproject.toml", "setup.py", ".git"],
      //   "securities": {
      //     "E": "error",
      //     "F": "error",
      //     "B": "warning",
      //     "I": "info",
      //     "N": "warning",
      //     "UP": "warning",
      //     "PT": "warning",
      //     "RUF": "warning"
      //   }
      // },
      "mypy": {
        "command": "mypy",
        "sourceName": "mypy",
        "args": [
           "--python-version=3.11",
           "--warn-return-any",
           "--disallow-untyped-defs",
           "--check-untyped-defs",
           "--show-column-numbers",
           "--no-error-summary",
           "--no-pretty"
         ],
        "rootPatterns": ["pyproject.toml", "setup.py", ".git"],
        "securities": {
          "error": "error"
        }
      }
   },
}
